<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@drawable/back_min"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo"
                    android:layout_marginTop="15dp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:text="Please fill in your details"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:textColor="#fff"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:id="@+id/tvselectgender"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Select Gender:"
                    android:textColor="#fff"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnergen"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:padding="4dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/tvselectgender"
                    android:background="@drawable/inputs"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/tvselectdept"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Select Occupation:"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"/>

                <Spinner
                    android:id="@+id/spinner_department"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:padding="4dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/tvselectdept"
                    android:background="@drawable/inputs"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/setup_date"
                    android:layout_width="250dp"
                    android:textColorHint="@color/text"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputs"
                    android:ems="10"
                    android:hint=" Select Date of Birth"
                    android:inputType="date"
                    android:padding="4dp"
                    android:drawableLeft="@drawable/calendar"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    />

                <Button
                    android:id="@+id/setup_date_btn"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/setup_date"
                    android:background="@drawable/buttons"
                    android:fontFamily="@font/electrolize"
                    android:text="Select Date"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="13sp" />
            </RelativeLayout>
            <EditText
                android:id="@+id/setup_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/mobile"
                android:hint="Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:padding="4dp"
                android:textColorHint="@color/text" />

            <EditText
                android:id="@+id/setup_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/address"
                android:hint="Address"
                android:padding="4dp"
                android:textColorHint="@color/text" />
            <Button
                android:id="@+id/setup_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons"
                android:textColor="#fff"
                android:text="Submit"
                android:fontFamily="sans-serif"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>